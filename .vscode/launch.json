{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Appium Traverser",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_ui.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Attach to ui_controller.py (debugpy)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ],
            "justMyCode": false
        }
    ]
}